document.getElementById("email-display").innerHTML = "";
document.getElementById("email-display").insertAdjacentHTML("beforeend", "<%= j render 'email_display', email: @email%>");
console.log(<%=@email.read%>);

if (<%=@email.read%> == true){
  document.getElementById("enveloppe").className = "fa-solid fa-envelope";
  document.getElementById("link-<%=@email.id%>").style.color="black";
  document.getElementById("link-<%=@email.id%>").style.fontWeight="400";
} 
else {
  document.getElementById("enveloppe").className = "";
  document.getElementById("enveloppe").className = "fa-solid fa-envelope-open";
  document.getElementById("link-<%=@email.id%>").style.color= "#007bff";
  document.getElementById("link-<%=@email.id%>").style.fontWeight="bold";
  document.getElementById("button-<%=@email.id%>").href = "/emails/<%=@email.id%>?read=true";
}

console.log(document.getElementById("checkbox-<%=@task.id%>"));
if (<%=@task.status%> == true) {
  document.getElementById('task-<%=@task.id%>').style.textDecoration ="line-through";
  document.getElementById("checkbox-<%=@task.id%>").setAttribute("data-params", "id=<%=@task.id%>&status=false");
} 
else {
  document.getElementById('task-<%=@task.id%>').style.textDecoration ="none";
  document.getElementById("checkbox-<%=@task.id%>").setAttribute("data-params", "id=<%=@task.id%>&status=true");
}